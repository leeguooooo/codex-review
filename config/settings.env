GITHUB_ORG="audit-mirror"
REPO_PREFIX="code-review-"
DEFAULT_BRANCH="main"
TZ="Asia/Tokyo"

WORKDIR="/var/lib/codex-review/work"
STATE_DIR="/var/lib/codex-review/state"
RUN_DIR="/var/lib/codex-review/run"

CODEX_PROMPT="@codex review 请重点关注安全性、正确性、可维护性"

GITLAB_HOST="gitlab.example.com"
GITLAB_PROTOCOL="https"
GITLAB_AUTH="user:token"
SYNC_FROM_GITLAB=1

HIGH_RISK_DIRS="auth|payment|infra|security|iam|crypto"
LOC_WEIGHT=500
MAX_LOC_SCORE=20
DIR_WEIGHT=5

MAX_REVIEWS_PER_RUN=0
SLEEP_BETWEEN_SECONDS=2

INITIAL_BASE="origin/{branch}~1"

LARK_WEBHOOK_URL="${LARK_WEBHOOK_URL:-}"
